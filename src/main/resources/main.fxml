            <MenuItem mnemonicParsing="false" text="退出" onAction="#handleExitAction"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="关于">
          <items>
            <MenuItem mnemonicParsing="false" text="Github" onAction="#handleGithubAction"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <ListView fx:id="fileListView" />
